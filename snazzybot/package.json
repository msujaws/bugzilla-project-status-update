{
  "name": "snazzybot",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:pages": "wrangler pages dev ./public",
    "deploy": "wrangler pages deploy ./public --project-name bugzilla-project-status-update",
    "test": "vitest run",
    "test:watch": "vitest --ui --watch",
    "coverage": "vitest run --coverage",
    "test:e2e": "playwright test --project=chromium --project=firefox",
    "test:e2e:slow": "playwright test --project=firefox-slow",
    "test:all": "npm run test && npm run test:e2e && npm run lint",
    "cli": "tsx cli/weekly-bugzilla-status.ts",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "@mswjs/interceptors": "^0.26.10",
    "@playwright/test": "^1.48.0",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.17",
    "cross-fetch": "^3.1.8",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "jsdom": "^24.1.3",
    "miniflare": "^4.20260116.0",
    "msw": "^2.3.1",
    "playwright": "^1.48.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "undici": "^6.19.8",
    "vitest": "^4.0.17",
    "whatwg-fetch": "^3.6.20",
    "wrangler": "^4.43.0",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.0",
    "marked": "^16.4.1"
  }
}
